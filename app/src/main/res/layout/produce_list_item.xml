<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="produce"
            type="com.gilboot.agriculturemarket.models.Produce" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_72"
        android:orientation="horizontal"
        android:padding="@dimen/size_16">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picture"
            android:layout_width="@dimen/size_40"
            android:layout_height="@dimen/size_40"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            tools:src="@mipmap/ic_launcher" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/size_16"
            android:layout_toStartOf="@+id/price"
            android:layout_toEndOf="@+id/picture"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{produce.name}"
                android:textColor="@color/primaryTextColor"
                tools:text="Ssenyonjo Gilbert" />


            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{produce.date.toLocaleString()}"
                android:textColor="@color/secondaryTextColor"
                tools:text="24th Ddecember" />
        </LinearLayout>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text='@{String.valueOf(produce.price) + "/-"}'
            android:textColor="@color/primaryTextColor"
            tools:text="3,000/-" />

    </RelativeLayout>
</layout>